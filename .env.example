# Application
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postcodejp
SECRET_KEY=your-secret-key-here

# Security Settings
# CORS allowed origins (comma-separated, leave empty to use default secure origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Admin API key for protected endpoints (required for production)
ADMIN_API_KEY=your-admin-api-key-here

# Data Update Settings
SYNC_SCHEDULE_HOUR=3
SYNC_SCHEDULE_MINUTE=0

# Japan Post Data URLs
JP_POST_UTF_ALL_URL=https://www.post.japanpost.jp/zipcode/dl/utf/zip/utf_ken_all.zip
JP_POST_JIGYOSYO_URL=https://www.post.japanpost.jp/zipcode/dl/jigyosyo/zip/jigyosyo.zip
